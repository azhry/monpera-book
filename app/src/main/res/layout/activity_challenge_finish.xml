<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_gift"/>

        <TextView
            android:id="@+id/textView"
            android:text="Terima kasih telah berpartisipasi dalam soal kuis tantangan ini. Ayo dokumentasikan kunjunganmu di museum kali ini"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:layout_width="230dp"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.CardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/cardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/p200x200"/>
                <View
                    android:layout_width="200dp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorUnliked"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_margin="10dp"
                    android:text="(Twibbon)"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/refreshButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_refresh"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/cameraButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_photo_camera_black_24dp"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/saveButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_save"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>